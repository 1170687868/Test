<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="#f4f0f0">
        <ImageView
            android:id="@+id/cpxq_fh_iv"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:background="@mipmap/btn_homeasup_default"/>
        <TextView
            android:id="@+id/cpfl_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="菜品详情"
            android:textSize="20dp"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center"
            android:paddingRight="10dp">

        <ImageView
            android:id="@+id/sc_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ico_fun_live"/>
        </LinearLayout>

    </FrameLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <ImageView
        android:id="@+id/cpxq_ylt_iv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/cpxq_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AAAA"
        android:textSize="20dp"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/cpxq_js_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dawdoa0wdipaiowfouafapfjpaw9ujrf8eyhw8fuhoiejfpjqw9pjfpqjwfpjwfjpwjfpjpjpp"
        android:textSize="15dp"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="食材"
        android:padding="5dp"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/cpxq_sc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dwdawdfwadadf;aslkfpldf"
        android:textSize="15dp"
        android:padding="5dp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/cpxq_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
            <android.support.design.widget.CoordinatorLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>